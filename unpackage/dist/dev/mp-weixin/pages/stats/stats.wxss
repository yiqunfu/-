.stats-page.data-v-162bebc6 {
  padding: 20rpx;
  background: #F8F8F8;
  min-height: 100vh;
}
/* 待办统计卡片 */
.todo-stats-card.data-v-162bebc6 {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}
.card-title.data-v-162bebc6 {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}
.todo-stats-row.data-v-162bebc6 {
  display: flex;
  justify-content: space-around;
}
.stats-item.data-v-162bebc6 {
  text-align: center;
}
.stats-num.data-v-162bebc6 {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
}
.done-num.data-v-162bebc6 {
  color: #42b983;
}
.stats-label.data-v-162bebc6 {
  color: #999;
  font-size: 24rpx;
}
/* 图表切换 tabs */
.chart-tabs.data-v-162bebc6 {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
  margin: 20rpx 0;
}
.chart-tabs text.data-v-162bebc6 {
  padding: 10rpx 20rpx;
  background: white;
  border-radius: 30rpx;
  font-size: 26rpx;
  box-shadow: 0 2rpx 5rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
}
.chart-tabs text.active.data-v-162bebc6 {
  background: #42b983;
  color: white;
  -webkit-transform: scale(1.05);
          transform: scale(1.05);
}
/* 图表容器 */
.chart-container.data-v-162bebc6 {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  display: flex;
  justify-content: center;
}
/* 空数据提示 */
.empty-tip.data-v-162bebc6 {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}
/* 课表式心情容器 */
.schedule-container.data-v-162bebc6 {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}
/* 课表表头（星期） */
.schedule-header.data-v-162bebc6 {
  display: flex;
  justify-content: space-around;
  margin-bottom: 10rpx;
}
.weekday.data-v-162bebc6 {
  width: 80rpx;
  text-align: center;
  font-weight: bold;
}
/* 课表网格（7天×3时段） */
.schedule-grid.data-v-162bebc6 {
  display: flex;
  justify-content: space-around;
}
.day-column.data-v-162bebc6 {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}
.mood-slot.data-v-162bebc6 {
  width: 80rpx;
  height: 100rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 22rpx;
  text-shadow: 0 1rpx 2rpx rgba(0,0,0,0.2);
  transition: -webkit-transform 0.2s ease;
  transition: transform 0.2s ease;
  transition: transform 0.2s ease, -webkit-transform 0.2s ease;
}
.mood-slot.data-v-162bebc6:active {
  -webkit-transform: scale(0.95);
          transform: scale(0.95);
}
.mood-text.data-v-162bebc6 {
  padding: 5rpx;
}
/* 心情颜色图例 */
.mood-legend.data-v-162bebc6 {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 15rpx;
  margin-top: 20rpx;
}
.legend-item.data-v-162bebc6 {
  display: flex;
  align-items: center;
  gap: 5rpx;
  font-size: 22rpx;
}
.color-block.data-v-162bebc6 {
  width: 20rpx;
  height: 20rpx;
  border-radius: 4rpx;
}

